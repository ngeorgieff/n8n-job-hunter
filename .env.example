# n8n Job Hunter - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# n8n Configuration
# ============================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme_secure_password

# n8n Paths
N8N_USER_FOLDER=~/.n8n
N8N_CUSTOM_EXTENSIONS=./custom-nodes

# n8n Server Settings
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_HOST=localhost
WEBHOOK_URL=http://localhost:5678/

# Timezone
GENERIC_TIMEZONE=America/New_York

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_TYPE=postgresdb
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=n8n_job_hunter
DB_USER=n8n_user
DB_PASSWORD=changeme_db_password

# ============================================
# SMTP Configuration (Email Notifications)
# ============================================
SMTP_FROM_EMAIL=your-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Email notification recipient
NOTIFICATION_EMAIL=your-email@example.com

# ============================================
# Slack Configuration (Optional)
# ============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#job-alerts

# ============================================
# Discord Configuration (Optional)
# ============================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# ============================================
# Job Platform API Keys
# ============================================

# LinkedIn (OAuth2)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Indeed
INDEED_PUBLISHER_ID=your_indeed_publisher_id

# Glassdoor
GLASSDOOR_PARTNER_ID=your_glassdoor_partner_id
GLASSDOOR_API_KEY=your_glassdoor_api_key

# ============================================
# Application Settings
# ============================================

# Logging
LOG_LEVEL=info
LOG_OUTPUT=console

# Rate Limiting (requests per minute)
RATE_LIMIT_LINKEDIN=10
RATE_LIMIT_INDEED=20
RATE_LIMIT_GLASSDOOR=15

# ============================================
# Optional Features
# ============================================

# Enable/Disable Platforms
ENABLE_LINKEDIN=true
ENABLE_INDEED=true
ENABLE_GLASSDOOR=false
ENABLE_REMOTE_OK=true

# Notification Channels
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_DISCORD_NOTIFICATIONS=false

# Database Cleanup
ENABLE_AUTO_CLEANUP=true
JOB_RETENTION_DAYS=90
